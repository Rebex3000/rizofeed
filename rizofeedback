<script>
   function submitForm(event) {
    event.preventDefault();
    //submit the form to your backend
    var notification = document.createElement("div");
    var message1 = document.createElement("p");
    var message2 = document.createElement("p");
    var message3 = document.createElement("p");
    var link = document.createElement("a");
    
    message1.innerHTML = "Thank you so much for your feedback!";
    message1.style.cssText = "font-size: 20px;";
    message2.innerHTML = "Remember that all the products at Rizobar are hand-baked by other Rizomis like you, and everyone does their best to fill this Rizo counter with goodies.";
    message2.style.cssText = "font-size: 14px;";
    link.innerHTML = "Manual de Prossumidores";
    link.href = "https://tinyurl.com/prossumidores-manual";
    message3.appendChild(link);
    notification.appendChild(message1);
    notification.appendChild(message2);
    notification.appendChild(message3);
    document.body.appendChild(notification);
  }
</script>


